<AnchorPane prefHeight="540.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.csc311_capstoneproj.controllers.LoginController">
   <children>
      <Label layoutX="20.0" layoutY="342.0" prefHeight="33.0" prefWidth="195.0" text="Login">
         <font>
            <Font name="Elephant" size="26.0" />
         </font>
      </Label>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="483.0" layoutY="63.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="14.0" layoutY="86.0" text="Welcome to Movie Diary" textFill="#c60707">
         <font>
            <Font name="Elephant" size="28.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="123.0" text="Review and track your favorite movies! " textFill="#5b585b">
         <font>
            <Font name="Elephant" size="12.0" />
         </font>
      </Label>
      <Label layoutX="20.0" layoutY="380.0" text="Enter your credentials to access your movie diary" textFill="#5b5959">
         <font>
            <Font name="Elephant" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="emailTextField" layoutX="436.0" layoutY="329.0" prefHeight="46.0" prefWidth="233.0" />
      <Label layoutX="436.0" layoutY="315.0" text="Email">
         <font>
            <Font name="Elephant" size="12.0" />
         </font>
      </Label>
      <Label layoutX="436.0" layoutY="382.0" text="Password">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <font>
            <Font name="Elephant" size="12.0" />
         </font>
      </Label>
      <Button fx:id="lgnButton" layoutX="514.0" layoutY="454.0" mnemonicParsing="false" text="Login">
         <font>
            <Font name="Elephant" size="18.0" />
         </font>
      </Button>
      <TextField fx:id="passwordTextField" layoutX="436.0" layoutY="398.0" prefHeight="46.0" prefWidth="233.0" />
      <Label fx:id="signUpLabel" layoutX="436.0" layoutY="499.0" onMouseClicked="#goToSignUp" text="Don't have an account? Make one here!">
         <font>
            <Font name="Elephant" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
